<%# locals: (flat:, full_description: true) -%>
<div id="<%= dom_id flat%>">
  <div class="card">
    <img class="card-img-top" src= <%= flat.image_url %> >
    <div class="card-body">
      <h5 class="card-title"><%= flat.name %></h5>
      <p class="card-text">
        <% if full_description %>
          <%= flat.description %>
        <% end %>
      </p>

    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Location <%= flat.address %></li>
      <li class="list-group-item">Occupancy <%= flat.occupancy %></li>
      <li class="list-group-item">Price p. Night
      <br />
      <br />
      <strong><%= flat.price %></strong> CHF</li>
    </ul>

  </div>
</div>
