<div class="banner d-flex flex-column justify-content-top align-items-center">
  <div class="container" id="homepage-header">
    <h1 class="display-3"><strong>Holidays - the authentic way</strong></h1>
    <h6>Get the local experience - Find the perfect flat</h6>
  </div>
  <div class="container justify-content-center mb-3">
    <div class="row justify-content-center mt-3">
      <div class="col-sm-8 my-3 d-flex align-items-center">
        <%= form_with url: flats_path, method: :get, class: "w-100" do %>
          <div class="input-group">
            <%= text_field_tag :query,
                params[:query],
                class: "form-control",
                placeholder: "Type a keyword"
            %>
            <div class="input-group-append">
              <%= submit_tag "Search", name: "", class: "btn btn-blue" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="cards">
  <%# <div id="flats"> %>
  <% @flats.each do |flat| %>
    <div class="container">
      <%= render "flat", flat: flat, full_description: false, full_image: false %>
      <div class="d-grid">
        <%= link_to "Show this flat", flat, class: "btn btn-blue mt-2 mb-5"%>
      </div>
    </div>
  <% end %>
</div>
