<%= simple_form_for [@flat, @reservation] do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <div class="container" >
    <div class="form-inputs .bg-light">
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.input :num_of_guests %>
    </div>
    <div class="d-grid">
      <%= f.button :submit, class: "btn btn-blue mt-2 mb-2" %>
    </div>
  </div>
<% end %>
